<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.owl.tanyadosen.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        android:background="@color/BackgroundMain"></android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:src="@drawable/amikom" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UNIVERSITAS AMIKOM YOGYAKARTA"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_margin="8dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="40dp"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/macimg_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/iconaccount" />

                    <ImageView
                        android:id="@+id/macimg_dosen"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icondosen" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/macimg_tanyadosen"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/iconchat" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/macimg_pengaturan"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/iconsetting" />

                        <ImageView
                            android:id="@+id/macimg_about"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/iconabout" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/dua" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EVENT MAHASISWA"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_margin="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/event1" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/event2" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/event3" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>